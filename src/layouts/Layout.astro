---
import { ViewTransitions } from 'astro:transitions';
export interface Props {
	title: string;
	pageFindIgnore?: boolean;
	background?: string;
}

const { title, background = '', pageFindIgnore = false } = Astro.props;
---

<!doctype html>
<html lang="en" style="color-scheme: dark; view-transition-name: none">
	<head>
		<meta charset="UTF-8" />
		<slot name="head" />
		<ViewTransitions />
		<meta name="viewport" content="width=device-width, minimum-scale=1.0, viewport-fit=cover" />
		<link rel="icon" href="/favicon.svg" />
		<title>{title + ' | Bag of Tricks'}</title>
		<slot name="head2" />
	</head>
	<body data-pagefind-body={!pageFindIgnore} style={background ? `background: ${background}` : ''}>
		<slot />
	</body>
</html>
