---
import Layout from '../../layouts/iframes/vtscrollLayout.astro';

export async function getStaticPaths() {
	return [
		{ params: { theme: 'light', duration: '0s' } },
		{ params: { theme: 'dark', duration: '0s' } },
		{ params: { theme: 'light', duration: '2s' } },
		{ params: { theme: 'dark', duration: '2s' } },
		{ params: { theme: 'light', duration: '0' } },
		{ params: { theme: 'dark', duration: '0' } },
	];
}
const { theme, duration } = Astro.params;
const opt = duration === '0' ? true : undefined;
---

<Layout theme={theme === 'light' ? 'light' : 'dark'} {duration} {opt}>
