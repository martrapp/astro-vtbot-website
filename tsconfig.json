{
  "extends": "astro/tsconfigs/strictest",
  "exclude": [
    "node_modules",
    "sizes",
    "dist"
  ],
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },
    "jsxImportSource": "react"
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.astro",
    "**/*.mdx"
  ]
}
