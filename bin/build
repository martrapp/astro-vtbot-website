#! /bin/sh

sed -i 's/showSubResults: true,/showSubResults:true,excerptLength:30,/' node_modules/@astrojs/starlight/components/Search.astro
astro check && astro build
if [ "$?" -ne "0" ]; then
	exit 1
fi
LOGO=$(ls dist/_astro/favicon*.svg)
echo ${LOGO} $(echo ${LOGO}|sed 's|\(dist/_astro/.*\)_.*\.svg|\1.svg|') | xargs cp
./bin/check_links.sh
